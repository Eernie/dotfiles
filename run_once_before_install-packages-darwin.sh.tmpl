{{- if eq .chezmoi.os "darwin" -}}
#!/bin/bash


if [[ $(command -v brew) == "" ]]; then
    echo "Installing Hombrew"
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
else
    echo "Updating Homebrew"
    brew update
fi

brew bundle --no-lock --file=/dev/stdin <<EOF
tap "homebrew/cask-fonts"
tap "ruimarinho/tap"
brew "age"
brew "bitwarden-cli"
brew "chezmoi"
brew "curl"
brew "git"
brew "helm"
brew "telnet"
brew "wget"
brew "ruimarinho/tap/mota"
brew "zsh"
cask "bitwarden"
cask "font-fantasque-sans-mono-noloopk"
cask "google-chrome"
cask "iterm2"
cask "jetbrains-toolbox"
cask "keystore-explorer"
cask "qlmarkdown"
cask "quicklook-json"
cask "spotify"
cask "visualvm"
cask "vlc"
cask "slack"
cask "fluxcd/tap/flux"
EOF

bw config server "https://vault.falkenkamp.nl"
if [ ! -f /Users/erwin/key.txt ]
then
    bw login oldenkamperwin@gmail.com
    export BW_SESSION=$(bw unlock --raw)

    bw get attachment "key.txt" --itemid "66b1dc4c-118f-4812-8ffe-a8b8f355073f"
fi


{{ end -}}
